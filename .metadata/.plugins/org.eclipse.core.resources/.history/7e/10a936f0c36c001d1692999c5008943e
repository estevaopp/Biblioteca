import Models.*;

public class LerArquivo {
	
	public ArrayList<Livro> ArquivoDeLivro(ArrayList<Livro> listaDeLivros){
		try {
			FileReader nomeArq = new FileReader("livros.txt");
			Scanner arquivoProfessorR = new Scanner(nomeArq);
			//Fazemos um loop linha a linha no arquivo,
			// enquanto existir uma prï¿½xima linha.
			while(arquivoProfessorR.hasNext())			
			{
				//faz algo com a linha
				linha = arquivoProfessorR.nextLine();
				System.out.print(linha);

				System.out.print("\n");
				cont++;
			}
		} catch (Exception e) { 
			System.out.println(e);
		} finally { 
			arquivoProfessorR.close();
		}
		return listaDeLivros;
	}
	
