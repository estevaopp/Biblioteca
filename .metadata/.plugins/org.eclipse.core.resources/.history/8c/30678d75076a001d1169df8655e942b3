package Arquivos;

import java.io.FileWriter;
import java.io.PrintWriter;

import Models.*;

public class EscreverEmArquivo {
	
	public void Cadastrar(Aluno aluno) {
		PrintWriter arquivoProfessorW = null;
		try {
			FileWriter out = new FileWriter("professores.txt",true); 
			arquivoProfessorW = new PrintWriter(out);

			arquivoProfessorW.println(aluno.toArquivo());

			System.out.printf("Cadastro realizado com sucesso\n");  
			
		}catch (Exception e){ 
			System.out.println(e);
		}finally{ 
			arquivoProfessorW.close();
		}
	}
}
	
