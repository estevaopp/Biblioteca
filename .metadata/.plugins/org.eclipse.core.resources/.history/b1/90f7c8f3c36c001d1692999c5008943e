package Arquivos;
import java.io.FileWriter;
import java.io.PrintWriter;
import java.util.ArrayList;
import java.util.Scanner;
import java.io.BufferedReader;
import java.io.FileReader;
import Models.*;

public class LerArquivo {
	
	public void ArquivoDeLivro(ArrayList<Livro> listaDeLivros){
		Scanner arquivoLivro;
		try {
			String linha;
			FileReader nomeArq = new FileReader("livros.txt");
			arquivoLivro = new Scanner(nomeArq);
			//Fazemos um loop linha a linha no arquivo,
			// enquanto existir uma pr�xima linha.
			while(arquivoLivro.hasNext())			
			{
				//faz algo com a linha
				//<c�digo>;<autor(es)>;<t�tulo>;<editora>;<tipo>;<ano de publica��o>;<issn>
				//int codigo, String autor, String titulo, String editora,char tipo, int anoDePublicacao,String issn
				linha = arquivoLivro.nextLine();
				String array[] = new String[7];
				Livro livro = new Livro(Integer.parseInt(array[0]), array[1], array[2], array[3],
						array[4].charAt(0), Integer.parseInt(array[5]), array[6]);
				listaDeLivros.add(linha);

				System.out.print("\n");
			}
		} catch (Exception e) { 
			System.out.println(e);
		} finally { 
			arquivoLivro.close();
		}
	}
	
